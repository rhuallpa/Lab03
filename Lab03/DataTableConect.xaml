<Window x:Class="Lab03.DataTableConect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab03"
        mc:Ignorable="d"
        Title="DataTableConect" Height="450" Width="800">
    <Grid>
        <Grid>
            <StackPanel Height="500" Width="800" Background="ForestGreen" HorizontalAlignment="Center" Margin="0">
                <Label HorizontalAlignment="Center" FontSize="30" FontFamily="Consolas" FontStyle="Oblique" Foreground="White" FontWeight="Bold">LISTADO DE ESTUDIANTES</Label>
                <DataGrid x:Name="dataGridEstudiantes" />
                <Button Width="100" Height="30" Margin="5" Background="Red" FontWeight="Bold" Foreground="White" Click="Button_Click">Salir</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
